#include<iostream>
using namespace std;
class marks{
       public:
       float m1,m2,m3,m4,m5;
      marks(){
           float m1= 0.0;
           float m2= 0.0;
           float m3= 0.0;
           float m4= 0.0;
           float m5= 0.0;
             }
        float avgmarks(){
                      return (m1+m2+m3+m4+m5)/5;
                     }
  };
  int main(){
        marks s1;
         cout<<"enter the marks of candidate(5 subject marks) :";
         cin<<s1.m1;
         cin<<s1.m2;
         cin<<s1.m3;
         cin<<s1.m4;
         cin<<s1.m5;
         cout<<" the average marks of student is "<<avgmarks()<<endl;
        return 0; 
        }
